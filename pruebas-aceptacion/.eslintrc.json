{
  "plugins": ["cypress", "chai-friendly"],
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "cypress/globals": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "rules": {
    "no-const-assign": "warn",
    "no-this-before-super": "warn",
    "no-undef": "warn",
    "no-unreachable": "warn",
    "no-unused-vars": "warn",
    "constructor-super": "warn",
    "valid-typeof": "warn",
    "no-unused-expressions": 0,
    "chai-friendly/no-unused-expressions": 2
  }
}
